<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondaryColorTransparency"
        tools:context="coffe.four_k_soft.com.coffeefree.fragment.UserProfileFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment_profile"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="3dp"
                android:paddingStart="4dp"
                android:singleLine="true"
                android:text="Profile"
                android:textAllCaps="true"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="2dp"
                app:cardBackgroundColor="@color/secondaryDarkColor"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_input_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="3dp"
                            android:lines="1"
                            android:paddingStart="4dp"
                            android:text="Name:"
                            android:textAllCaps="true"
                            android:textColor="@color/primaryColor"
                            android:textStyle="bold|italic" />

                        <EditText
                            android:id="@+id/edit_name"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:lines="1"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/button_edit_name"
                            android:layout_width="50dp"
                            android:layout_height="38dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="3dp"
                            android:backgroundTint="@color/primaryColor"
                            android:text="edit"
                            android:textAllCaps="false"
                            android:textColor="@color/primaryTextColor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_input_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="3dp"
                            android:lines="1"
                            android:paddingStart="4dp"
                            android:text="Phone:"
                            android:textAllCaps="true"
                            android:textColor="@color/primaryTextColor"
                            android:textStyle="bold|italic" />

                        <EditText
                            android:id="@+id/edit_phone"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="phone"
                            android:lines="1"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/button_edit_phone"
                            android:layout_width="50dp"
                            android:layout_height="38dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="3dp"
                            android:text="edit"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp"
                app:cardBackgroundColor="@color/secondaryLightColor"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_title_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="3dp"
                            android:lines="1"
                            android:paddingStart="4dp"
                            android:text="Address:"
                            android:textAllCaps="false"
                            android:textColor="@color/primaryColor"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/text_this_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="3dp"
                            android:paddingStart="4dp"
                            android:singleLine="true"
                            android:text="Vitryka 12, kv 1"
                            android:textColor="@color/secondaryDarkColor"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/button_edit_address"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="3dp"
                        android:background="@drawable/ic_chevron_right_color" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="2dp"
                app:cardBackgroundColor="@color/secondaryDarkColor"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_title_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="3dp"
                            android:lines="1"
                            android:paddingStart="4dp"
                            android:text="Card:"
                            android:textAllCaps="true"
                            android:textColor="@color/primaryColor"
                            android:textStyle="bold|italic" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_title_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="3dp"
                                android:lines="1"
                                android:paddingStart="4dp"
                                android:text="number:"
                                android:textAllCaps="false"
                                android:textColor="@color/primaryTextColor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_number_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginVertical="3dp"
                                android:singleLine="true"
                                android:text="**** **** **** 1234"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                    <Button
                        android:id="@+id/button_card"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="3dp"
                        android:background="@drawable/ic_chevron_right_while" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp"
                app:cardBackgroundColor="@color/secondaryLightColor"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView

                        android:id="@+id/text_title_security"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="3dp"
                        android:layout_weight="1"
                        android:lines="1"
                        android:paddingStart="4dp"
                        android:text="Security:"
                        android:textAllCaps="true"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/button_security"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="3dp"
                        android:background="@drawable/ic_chevron_right_color" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="2dp"
                app:cardBackgroundColor="@color/secondaryDarkColor"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:gravity="top"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView


                        android:id="@+id/text_title_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="3dp"
                        android:layout_weight="1"
                        android:lines="1"
                        android:paddingStart="4dp"
                        android:text="History shops:"
                        android:textAllCaps="true"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/button_history"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="3dp"
                        android:background="@drawable/ic_chevron_right_while" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </FrameLayout>
</layout>